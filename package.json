{
  "name": "luma-words",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:server": "cd server && bun run --watch index.ts",
    "build": "astro build",
    "serve": "bun run ./dist/server/entry.mjs",
    "preview": "astro preview",
    "check": "astro check",
    "db:push": "cd server && bun drizzle-kit push",
    "db:studio": "cd server && bun drizzle-kit studio",
    "d1:deploy:cron": "wrangler deploy --config wrangler.cron.jsonc",
    "d1:generate": "drizzle-kit generate",
    "d1:migrate:local": "wrangler d1 migrations apply DB --local --persist-to .wrangler/state",
    "d1:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "d1:init:local": "wrangler d1 execute DB --local --file db/schema.sql --persist-to .wrangler/state",
    "d1:studio": "drizzle-kit studio",
    "astro": "astro",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@ant-design/x": "^2.1.1",
    "@ant-design/x-markdown": "^2.1.1",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/react": "^4.4.2",
    "@nanostores/react": "^1.0.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "antd": "^6.1.2",
    "antd-style": "^4.1.0",
    "astro": "^5.16.6",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.562.0",
    "nanostores": "^1.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-text-to-speech": "^5.1.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "temporal-polyfill": "^0.3.0",
    "uuid": "^13.0.0",
    "web-highlighter": "^0.7.4",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "playwright": "^1.57.0",
    "storybook": "^10.1.10",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.2",
    "vitest": "^4.0.16"
  }
}
