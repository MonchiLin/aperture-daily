{
  "name": "aperture-daily-server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.1.0",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "dev:sync": "bun run db:pull && bun run dev",
    "start": "bun run index.ts",
    "db:pull": "bun run scripts/db-sync.ts pull",
    "db:push": "bun run scripts/db-sync.ts push",
    "db:export": "bun run scripts/db-sync.ts export",
    "d1:migrate:remote": "npx wrangler d1 migrations apply DB --remote",
    "check": "bun x tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251229.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "dayjs": "^1.11.19",
    "edge-tts-universal": "^1.3.3",
    "elysia": "^1.4.19",
    "kysely": "^0.28.9",
    "kysely-bun-sqlite": "^0.4.0",
    "kysely-d1": "^0.4.0",
    "openai": "^6.15.0",
    "zod": "^4.2.1"
  }
}