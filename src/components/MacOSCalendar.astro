---
/**
 * MacOS 风格日历 - Astro 版本
 * 
 * 纯服务端渲染，零 JavaScript。
 * 所有交互都通过 <a> 标签实现，配合 View Transitions 提供平滑体验。
 */
import { getCalendarState } from '../lib/calendar';

interface Props {
    publishedDays: string[];
    selectedDate: string;
}

const { publishedDays, selectedDate } = Astro.props;
const state = getCalendarState(selectedDate, publishedDays);

const weekDays = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
---

<div class="flex flex-col w-full font-serif text-slate-900">
    <!-- 头部 -->
    <header class="flex items-center justify-between py-4 mb-2">
        <div class="flex flex-col">
            <span class="text-sm font-bold tracking-widest uppercase text-stone-500 mb-1">
                {state.currentYear}
            </span>
            <h2 class="text-4xl font-black tracking-tight font-serif text-slate-900/90 leading-none">
                {state.monthName}
            </h2>
        </div>

        <div class="flex items-center gap-1">
            <div class="flex items-center border border-stone-200 rounded-sm">
                <a 
                    href={`/day/${state.prevMonthStr}`} 
                    class="p-1 hover:bg-stone-100 transition-colors"
                    aria-label="Previous Month"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                        <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
                    </svg>
                </a>
                <div class="w-px h-4 bg-stone-200"></div>
                <a 
                    href={`/day/${state.nextMonthStr}`}
                    class="p-1 hover:bg-stone-100 transition-colors"
                    aria-label="Next Month"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
            <a
                href={`/day/${state.todayStr}`}
                class="ml-2 px-3 py-1 text-xs font-bold uppercase tracking-widest border border-stone-200 hover:bg-stone-100 transition-colors rounded-sm"
            >
                Today
            </a>
        </div>
    </header>

    <!-- 星期表头 -->
    <div class="grid grid-cols-7 py-2 border-y-2 border-slate-900 mb-2">
        {weekDays.map(day => (
            <div class="text-center text-xs font-bold uppercase tracking-widest text-slate-900">
                {day}
            </div>
        ))}
    </div>

    <!-- 日期网格 -->
    <div class="grid grid-cols-7 gap-y-4 gap-x-1">
        {state.days.map(day => {
            return (
                <a
                    href={`/day/${day.dateStr}`}
                    class:list={[
                        "relative group flex flex-col items-center justify-center h-10 w-10 mx-auto transition-all rounded-full",
                        !day.isCurrentMonth && "opacity-20",
                        day.isCurrentMonth && "opacity-100",
                        day.isSelected && "bg-slate-900 text-[#F3F2EE]",
                        !day.isSelected && "hover:bg-stone-200",
                        day.isToday && !day.isSelected && "ring-2 ring-slate-400"
                    ]}
                >
                    <span class:list={[
                        "text-base font-serif font-medium",
                        day.isSelected && "font-bold"
                    ]}>
                        {day.dayNumber}
                    </span>
                    
                    {/* 已发布标记 */}
                    {day.isPublished && !day.isSelected && (
                        <div class="absolute bottom-1.5 w-1 h-1 rounded-full bg-red-800" />
                    )}
                </a>
            );
        })}
    </div>
</div>
