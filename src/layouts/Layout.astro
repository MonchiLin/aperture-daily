---
import "../styles/global.css";
import "../styles/grain-overlay.css";
import "../styles/analysis.css";
import SetupEnforcer from '../components/onboarding/SetupEnforcer';
import SettingsPanel from "../components/SettingsPanel";
import HelpPanel from "../components/HelpPanel";
import { ClientRouter } from "astro:transitions";

type Props = {
	title?: string;
	mainClass?: string;
};

const { title = "Aperture Daily", mainClass } = Astro.props;
const resolvedMainClass = mainClass ?? "mx-auto max-w-8xl px-4";
---

<html lang="zh-CN" class="min-h-screen bg-[#F3F2EE]">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link 
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&family=Noto+Serif+SC:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,700;0,900;1,400&display=swap" 
			rel="stylesheet"
		/>
		<title>{title}</title>
		<ClientRouter />
	</head>
<body
		class="min-h-screen flex flex-col bg-[#F3F2EE] text-slate-900 antialiased selection:bg-[#F3E5AB] selection:text-black"
	>
		<!-- 拟真纸张质感叠加层 -->
		<div id="paper-grain"></div>

		<header
			class="sticky top-0 z-10 border-b border-stone-300 bg-[#F3F2EE]/95 transition-colors"
		>
			<div
				class="mx-auto flex max-w-7xl items-center justify-between px-4 py-4"
			>
				<a
					href="/"
					class="font-serif text-2xl font-bold tracking-tight text-slate-900 hover:text-slate-700 transition-colors"
					>Aperture Daily</a
				>
				<div class="flex items-center gap-1">
					<SetupEnforcer client:only="react" />
					<SettingsPanel client:load />
					<HelpPanel client:load />
				</div>
			</div>
		</header>
		<main class={`w-full ${resolvedMainClass}`}>
			<slot />
		</main>
		
		<style is:global>
			/* NProgress 样式自定义 */
			#nprogress {
				pointer-events: none;
			}
			#nprogress .bar {
				background: linear-gradient(90deg, #3b82f6, #8b5cf6);
				position: fixed;
				z-index: 9999;
				top: 0;
				left: 0;
				width: 100%;
				height: 3px;
			}
			#nprogress .peg {
				display: block;
				position: absolute;
				right: 0px;
				width: 100px;
				height: 100%;
				box-shadow: 0 0 10px #8b5cf6, 0 0 5px #8b5cf6;
				opacity: 1;
				transform: rotate(3deg) translate(0px, -4px);
			}
		</style>
		
		<script>
			import NProgress from 'nprogress';
			
			// 标记客户端已 hydration，用于 CSS 切换 SSR/客户端组件
			document.documentElement.classList.add('hydrated');
			
			NProgress.configure({ showSpinner: false, speed: 200 });
			
			// 导航开始
			document.addEventListener('astro:before-preparation', () => {
				NProgress.start();
			});
			
			// 导航完成
			document.addEventListener('astro:after-swap', () => {
				NProgress.done();
				// 确保导航后仍保持 hydrated 状态
				document.documentElement.classList.add('hydrated');
			});
		</script>
	</body>
</html>
