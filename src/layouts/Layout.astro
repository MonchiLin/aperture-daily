---
import "../styles/global.css";
import "../styles/grain-overlay.css";
import "../styles/analysis.css";
import SetupEnforcer from '../components/onboarding/SetupEnforcer';
import SettingsPanel from "../components/SettingsPanel";
import HelpPanel from "../components/HelpPanel";
import { ClientRouter } from "astro:transitions";

type Props = {
	title?: string;
	mainClass?: string;
};

const { title = "UpWord", mainClass } = Astro.props;
const resolvedMainClass = mainClass ?? "mx-auto max-w-8xl px-4";
---

<html lang="zh-CN" class="min-h-screen bg-[#F3F2EE]">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link 
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&family=Noto+Serif+SC:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,700;0,900;1,400&display=swap" 
			rel="stylesheet"
		/>
		<title>{title}</title>
		<!-- RSS 订阅发现 -->
		<link rel="alternate" type="application/rss+xml" title="UpWord RSS" href="/rss.xml" />
		<link rel="alternate" type="application/rss+xml" title="UpWord Easy" href="/rss/easy" />
		<link rel="alternate" type="application/rss+xml" title="UpWord Medium" href="/rss/medium" />
		<link rel="alternate" type="application/rss+xml" title="UpWord Hard" href="/rss/hard" />
		<ClientRouter />
	</head>
<body
		class="min-h-screen flex flex-col bg-[#F3F2EE] text-slate-900 antialiased selection:bg-[#F3E5AB] selection:text-black"
	>
		<!-- 拟真纸张质感叠加层 -->
		<div id="paper-grain"></div>

		<header
			class="sticky top-0 z-10 border-b border-stone-300 bg-[#F3F2EE]/95 transition-colors"
		>
			<div
				class="mx-auto flex max-w-7xl items-center justify-between px-4 py-4"
			>
				<a
					href="/"
					class="font-serif text-2xl font-bold tracking-tight text-slate-900 hover:text-slate-700 transition-colors"
					>UpWord</a>
				<div class="flex items-center gap-1">
					<SetupEnforcer client:only="react" />
					<nav class="flex items-center gap-4 mr-2">
						<a href="/settings/profiles" class="text-xs font-bold uppercase tracking-widest text-stone-500 hover:text-stone-900 transition-colors">Profiles</a>
						<a href="/settings/topics" class="text-xs font-bold uppercase tracking-widest text-stone-500 hover:text-stone-900 transition-colors">Topics</a>
						<a href="/settings/rss" class="text-xs font-bold uppercase tracking-widest text-stone-500 hover:text-stone-900 transition-colors">RSS</a>
					</nav>
					<SettingsPanel client:load />
					<HelpPanel client:load />
				</div>
			</div>
		</header>
		<main class={`w-full ${resolvedMainClass}`}>
			<slot />
		</main>
		
		<!-- 
			Global Global Styles & NProgress
			为什么要在这里定义？
			因为 View Transitions 会替换 body 内容。
			放在这里的 <style is:global> 确保样式在页面切换时 persistent。
			NProgress 作为页面加载指示器，提升 SPA 般的流畅体验。
		-->
		<style is:global>
			/* NProgress 样式自定义 */
			#nprogress {
				pointer-events: none;
			}
			#nprogress .bar {
				background: linear-gradient(90deg, #3b82f6, #8b5cf6);
				position: fixed;
				z-index: 9999;
				top: 0;
				left: 0;
				width: 100%;
				height: 3px;
			}
			#nprogress .peg {
				display: block;
				position: absolute;
				right: 0px;
				width: 100px;
				height: 100%;
				box-shadow: 0 0 10px #8b5cf6, 0 0 5px #8b5cf6;
				opacity: 1;
				transform: rotate(3deg) translate(0px, -4px);
			}
		</style>
		
		<script>
			import NProgress from 'nprogress';
			
			// Hydration Marker (注水标记)
			// 用于 CSS 选择器，避免 SSR 内容与 Client 内容切换时的闪烁 (FOUC)。
			document.documentElement.classList.add('hydrated');
			
			NProgress.configure({ showSpinner: false, speed: 200 });
			
			// 导航生命周期 (View Transitions API)
			// Astro 作为一个 MPA，通过 View Transitions 模拟了 SPA 的路由体验。
			// 我们不需要重载整个页面，只需替换 body 内容。
			// 这里监听生命周期事件来显示进度条。
			
			// 1. 导航开始：用户点击链接，或 history.pushState
			document.addEventListener('astro:before-preparation', () => {
				NProgress.start();
			});
			
			// 2. 页面交换完成：DOM 已更新，但脚本可能还在运行
			document.addEventListener('astro:after-swap', () => {
				NProgress.done();
				// 重新添加类名，因为新页面的 html 标签可能没有这个类
				document.documentElement.classList.add('hydrated');
			});
		</script>
	</body>
</html>
