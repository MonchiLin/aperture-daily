    Astro.response.headers.set('Cache-Control', 'no-store');
    Astro.response.status = 404;
}

// è§£æ„æ•°æ®
const {
    row,
    sources,
    wordDefinitions,
    sidebarWords,
    dateLabel,
    sortedArticles,
    title,
    readLevels,
    echoes,
} = articleData || {
    row: null,
    sources: [],
    wordDefinitions: [],
    sidebarWords: [],
    dateLabel: '',
